<% content_for :title, "Edit Category" %>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <h1 class="font-bold text-2xl text-gray-800 mb-6">Edit Category</h1>

  <%= form_with(model: @category, class: "contents") do |form| %>
    <% if @category.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3 mb-5">
        <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

        <ul class="list-disc ml-6">
          <% @category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :name, class: "block font-medium mb-1" %>
      <%= form.text_field :name, class: "block shadow-sm rounded-md border px-3 py-2 mt-1 w-full border-gray-300 focus:outline-blue-600", required: true %>
    </div>

    <div class="my-5">
      <%= form.label :color, class: "block font-medium mb-1" %>
      <%= form.select :color,
          [
            ["Red", "red-500"],
            ["Blue", "blue-500"],
            ["Green", "green-500"],
            ["Yellow", "yellow-500"],
            ["Purple", "purple-500"],
            ["Pink", "pink-500"],
            ["Indigo", "indigo-500"],
            ["Teal", "teal-500"],
            ["Orange", "orange-500"]
          ],
          {},
          class: "block shadow-sm rounded-md border px-3 py-2 mt-1 w-full border-gray-300 focus:outline-blue-600" %>
    </div>

    <div class="inline">
      <%= form.submit "Update Category", class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to categories_path, class: "text-blue-600 hover:text-blue-800 flex items-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to categories
    <% end %>
  </div>
</div>
